{
  "name": "vue-practice-project",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "homepage": "https://mohlaroyim.github.io/vue-boilerplate",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:e2e": "playwright test --project=chromium",
    "test:unit": "vitest --environment jsdom",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint --fix",
    "predeploy": "npm run build",
    "deploy": "cd dist && cp index.html 404.html"
  },
  "dependencies": {
    "@pinia/testing": "^0.1.7",
    "@vueuse/core": "^11.2.0",
    "axios": "^1.7.7",
    "lodash": "^4.17.21",
    "pinia": "^2.2.4",
    "pinia-plugin-persistedstate": "^4.1.2",
    "vue": "^3.5.12",
    "vue-i18n": "^9.14.1",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.48.1",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.17.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/eslint-config-typescript": "^14.1.1",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-plugin-playwright": "^2.0.0",
    "eslint-plugin-vue": "^9.30.0",
    "gh-pages": "^6.2.0",
    "globals": "^15.12.0",
    "jsdom": "^25.0.1",
    "npm-run-all2": "^7.0.1",
    "postcss": "^8.4.47",
    "sass": "^1.80.5",
    "sass-loader": "^16.0.2",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.0",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.4",
    "vue-tsc": "^2.1.6"
  }
}
